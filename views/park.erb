<div class="row">
    <div class="col-sm-9">
        <h1>            
            <i class="fas fa-mountain"></i>
            <%= @park[:title] %>
        </h1>
        <p><%= @park[:description] %></p>
        <% for review in @reviews %>
            <div class="media-body">
                    <h5 class="mt-4"><%= @users_table.where(id: review[:user_id]).to_a[0][:name] %></h5>
                <% if review[:rating] == 1.0 %>
                    <i class="fas fa-star"></i>
                <% elsif review[:rating] == 2.0 %>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                <% elsif review[:rating] == 3.0 %>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                <% elsif review[:rating] == 4.0 %>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                <% else %>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                <% end %>
                    <div>
                    <%= review[:comments] %>
                    </div>
            </div>
        <% end %>
        <p class="mt-5">
            <% if @current_user %>
                <a href="/parks/<%= @park[:id] %>/reviews/new" class="btn btn-primary">Review now!</a>
            <% else %>
                <a href="/logins/new" class="btn btn-danger">Please sign in to Review</a>
            <% end %>
        </p>
    </div>
    <div class="col-sm-3">
        <h3>Operating Hours</h3>
        <p><%= @park[:date] %></p>
        <h3>State</h3>
        <p><%= @park[:location] %></p>
        <h3>Yearly Visitors</h3>
        <p><%= @park[:visitors] %></p>
        <h3>Average Rating</h3>
        <p><%= @avg_rating %> / 5.0 </p>
        <h4>Total Reviews</h4>
        <p><%= @count_rating %></p>
    </div>

    
    <div class="col-sm-3">
      <h3>Location</h3>
      <iframe
        width="600"
        height="450"
        frameborder="0" style="border:0"
        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCtovsQvkIUWlNqtYwXY87gEd4ZSmJEhMw
          &q=<%=@lat %>, <%= @long %>&zoom=9" allowfullscreen>
      </iframe>
    </div>

</div>